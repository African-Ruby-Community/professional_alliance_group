<div class="speaker-block-two col-xl-3 col-lg-4 col-md-6 col-sm-12 wow fadeInUp">
    <div class="inner-box">
        <div class="info-box">
            <h4 class="name">
                <a href="{{ include.member.permalink }}">{{ include.member['Full Name'] }}</a>
            </h4>
        </div>
        <div class="image-box">
            <figure class="image">
                <a href="{{ include.member.permalink }}">
                    <img src="{{ include.member['Image URL'] }}" alt="{{ include.member['Full Name'] }}"
                         class="member-image"/>
                </a>
            </figure>
        </div>
        <div class="social-box">
            <ul class="social-links social-icon-colored">
                <!--                <li>-->
                <!--                    <a href="#"><i class="fab fa-facebook-f"></i></a>-->
                <!--                </li>-->
                {% if include.member.twitter and include.member.twitter != "" %}
                    <li>
                        <a href="{{ include.member.twitter }}"><i class="fa-brands fa-x-twitter"></i></a>
                    </li>
                {% endif %}
                {% if include.member.linkedin and include.member.linkedin != "" %}
                    <li>
                        <a href="{{ include.member.linkedin }}"><i class="fab fa-linkedin"></i></a>
                    </li>
                {% endif %}
                {% if include.member.website and include.member.website != "" %}
                    <li>
                        <a href="{{ include.member.website }}"><i class="fab fa-sistrix"></i></a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </div>
</div>
