<div class="speaker-block-two col-xl-3 col-lg-4 col-md-6 col-sm-12 wow fadeInUp">
    <div class="inner-box">
        <div class="info-box">
            <h4 class="name">
                <a href="{{ include.group.permalink }}">{{ include.group.name }}</a>
            </h4>
            <span class="short-description">{{ include.group.bio }}</span>
        </div>
        <div class="image-box">
            <figure class="image">
                <a href="{{ include.group.permalink }}">
                    {% if include.group.image %}
                        <img src="{{ include.group.image }}" alt="{{ include.group.name }}"
                             style="width: 200px; height: 145px; object-fit: cover;"/>
                    {% else %}
                        <img src="/images/groups/default.png" alt="{{ include.group.name }}"
                             style="width: 200px; height: 145px; object-fit: cover;"/>
                    {% endif %}
                </a>
            </figure>
        </div>
        <div class="social-box">
            <ul class="social-links social-icon-colored">
                {% if include.group.twitter and include.group.twitter != "" %}
                    <li>
                        <a href="{{ include.group.twitter }}"><i class="fa-brands fa-x-twitter"></i></a>
                    </li>
                {% endif %}
                {% if include.group.linkedin and include.group.linkedin != "" %}
                    <li>
                        <a href="{{ include.group.linkedin }}"><i class="fab fa-linkedin"></i></a>
                    </li>
                {% endif %}
                {% if include.group.website and include.group.website != "" %}
                    <li>
                        <a href="{{ include.group.website }}"><i class="fas fa-globe"></i></a>
                    </li>
                {% endif %}
                {% comment %}
                <!-- Email field not present in new_remote/groups.yml -->
                {% if include.group.email and include.group.email != "" %}
                    <li>
                        <a href="mailto:{{ include.group.email }}"><i class="fas fa-envelope"></i></a>
                    </li>
                {% endif %}
                {% endcomment %}
            </ul>
        </div>
    </div>
</div>
